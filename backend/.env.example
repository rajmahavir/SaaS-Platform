# Application Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1
APP_NAME="TaskManager SaaS"
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Database Configuration
DATABASE_URL="postgresql://taskmanager:taskmanager@localhost:5432/taskmanager?schema=public"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM="TaskManager <noreply@taskmanager.com>"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=TaskManager

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# WebSocket Configuration
WS_PORT=5001
WS_PATH=/socket.io

# Background Jobs
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_NAME=taskmanager-queue

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_SECRET=your-session-secret

# Feature Flags
FEATURE_GRAPHQL_ENABLED=true
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_TWO_FACTOR_AUTH=true

# API Keys
ENCRYPTION_KEY=your-encryption-key-for-api-keys

# Timezone
TZ=UTC
